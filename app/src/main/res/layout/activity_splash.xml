<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_4"
        app:lottie_autoPlay="true"
        app:lottie_renderMode="automatic"/>

    <ImageView
        android:id="@+id/imgCodeGuruIcon"
        android:layout_width="240dp"
        android:layout_height="110dp"
        android:layout_below="@id/lottie_animation1"
        android:src="@drawable/codeguruu"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding made easy"
        android:layout_below="@id/imgCodeGuruIcon"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/opensans_extrabold"
        android:textSize="30sp"
        android:textColor="#000000"/>






</RelativeLayout>