<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/object_oriented_programming_structures_java"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#f73378"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/java_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:src="@drawable/java"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/about_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This course of study builds on the skills gained by students in Java Fundamentals or Java Foundations to help advance Java programming skills. Students will design object-oriented applications with Java and will create Java programs using hands-on, engaging activities."
            android:layout_toRightOf="@id/java_logo"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="#000000"/>

    </RelativeLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Free Trial for 3 Days"
        android:backgroundTint="#00695f"
        android:textColor="#bbdefb"
        android:textStyle="bold"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Referral Code"
        android:layout_margin="20dp"
        android:inputType="textPassword" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Click here to learn Java for free!"
        android:backgroundTint="#fbc02d"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/about1_java"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click here to Learn more about free courses!"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#2962ff"/>


</androidx.appcompat.widget.LinearLayoutCompat>